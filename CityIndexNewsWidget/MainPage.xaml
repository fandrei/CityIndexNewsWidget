<UserControl x:Class="CityIndexNewsWidget.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" Loaded="UserControl_Loaded">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="250*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <sdk:TabControl HorizontalAlignment="Stretch" Name="tabControl1" VerticalAlignment="Stretch" Grid.Row="0">
            <sdk:TabItem Header="newsTab" Name="newsTab" Visibility="Collapsed">
                <sdk:DataGrid AutoGenerateColumns="True" HorizontalAlignment="Stretch" Name="dataGrid1" VerticalAlignment="Stretch" ItemsSource="{Binding}" />
            </sdk:TabItem>
            <sdk:TabItem Header="errTab" Name="errTab" Visibility="Collapsed">
                <TextBox Name="errTextBox" TextWrapping="Wrap" IsReadOnly="True" />
            </sdk:TabItem>
        </sdk:TabControl>
        <Button Content="Refresh" Height="23" HorizontalAlignment="Center" Name="refreshButton" VerticalAlignment="Bottom" Width="75" Click="refreshButton_Click" Margin="162,0,162,15" Grid.Row="1" />
    </Grid>
</UserControl>
